<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/verde">


    <Button
        android:id="@+id/createWishList"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/create_wish_list"
        android:background="@drawable/shape"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="100dp"
        />

    <Button
        android:id="@+id/selectWishList"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/create_wish_list"
        android:background="@drawable/shape"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/createWishList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        />

    <Button
        android:id="@+id/manageFriends"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/manage_friends"
        android:background="@drawable/shape"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/selectWishList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        />

    <Button
        android:id="@+id/categories"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/categories"
        android:background="@drawable/shape"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/manageFriends"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        />


    <include
        layout="@layout/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>