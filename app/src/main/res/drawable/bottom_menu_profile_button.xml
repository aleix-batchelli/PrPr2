<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape (rounded square) with gradient -->
    <item>
        <shape android:shape="rectangle">
            <size android:height="50dp"
                android:width="50dp"/>
            <gradient
                android:startColor="#bf7d02"
                android:endColor="#FFA500"
                android:type="linear"
                android:angle="-45"
                />
            <corners android:radius="125dp" />
        </shape>
    </item>

    <!-- Icon with padding -->
    <item
        android:drawable="@drawable/user_icon"
        android:gravity="center"
        android:left="75dp"
        android:right="75dp"
        android:top="75dp"
        android:bottom="75dp">
    </item>
</layer-list>